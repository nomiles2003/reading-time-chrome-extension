{
    "manifest_version": 3,
    "name": "Reading time",
    "version": "1.0",
    "description": "Add the reading time to Chrome Extension documentation articles",
    "icons": {
        "16": "Images/ichigo-icon-16.png",
        "32": "Images/ichigo-icon-32.png",
        "48": "Images/ichigo-icon-48.png",
        "128": "Images/ichigo-icon-128.png"
    },
    "content_scripts": [
    {
      "js": ["scripts/content.js"],
      "matches": [
        "https://developer.chrome.com/docs/extensions/*",
        "https://developer.chrome.com/docs/webstore/*"
      ]
    }
  ]
}